# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[**]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**/*.{bzl,bazel}]
indent_size = 4

[**/BUILD]
indent_size = 4

[WORKSPACE]
indent_size = 4

[**/*.py]
indent_size = 4
